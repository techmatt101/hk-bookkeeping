$black: #2D2D2D;

body {
    background: #fff;
    color: $black;
    margin: 0;
    font-family: 'Noto Sans JP', sans-serif;
    font-size: 1.125rem;
    font-weight: 300;
    line-height: 1.9rem;
}

h1, h2, h3, h4, h5,
strong {
    font-weight: 500;
}

p {
    margin-top: 0;
}

a {
    outline: none;
}
